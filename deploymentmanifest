# Deployment for HarperDB
apiVersion: apps/v1
kind: Deployment
metadata:
  name: harperdb
  namespace: database # Namespace that we created before
spec:
  selector:
    matchLabels:
      app: harperdb # Merge all pods with the same label
  template:
    metadata:
      labels:
        app: harperdb # Create the pods with the label that we want to group
    spec:
      containers:
      - name: harperdb-container
        image: harperdb/harperdb # Same image from dockerhub
        env:
          - name: HDB_ADMIN_USERNAME
            value: harperdb # Setting username and password
          - name: HDB_ADMIN_PASSWORD
            value: harperdb
        resources:
          limits:
            memory: "512Mi" # Limiting memory usage
            cpu: "128m" # Limiting cpu usage
        ports:
        - containerPort: 9925 # Exposing port 9925 to the cluster
          name: hdb-api 
        volumeMounts: # Creating the volume mount point
          - mountPath: "/opt/harperdb" #Choosing the location to mount the volume
            name: hdb-data # Referencing the volume
        livenessProbe: # Creating a ping to detect the activation status
            port: 9925
          initialDelaySeconds: 30 # Will start after 30s of pod start
          periodSeconds: 10
        readinessProbe: # Ping to test if the pod is ready
          tcpSocket:
            port: 9925
          initialDelaySeconds: 10
          periodSeconds: 5
      volumes:
       - name: hdb-data # This is the volume we are going to mount
          persistentVolumeClaim: # Reference to the claim
            claimName: harperdb-data # Name of the claim
